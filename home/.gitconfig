[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[user]
	name = tyage
	email = namatyage@gmail.com
[pull]
	rebase = true
# oops! git < 1.8 raise error.
[push]
	default = simple
[alias]
	show-ignored = ls-files --exclude-standard --others --ignored
[core]
	precomposeunicode = true
	quotepath = false
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true

